  h2 {
    position: relative;
    z-index: 2;
    padding: 0.5em 1em;
  }
  
  @keyframes hide {
    from {
      width: 100%;
    }
    to {
      width: 0;
    }
  }
  
  @keyframes show {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }
  
  h2::before, h2::after {
    position: absolute;
    top: 0;
    right: 0;
    height: 100%;
    content: '';
  }
  
  h2::before {
    background: #d7ec13fd;
    z-index: -1;
    width: 0;
  }
  
  h2::after {
    background: #c7b62365;
    width: 100%;
  }
  
  h2.show::before {
    animation: show 3s .3s forwards cubic-bezier(0.23, 1, 0.32, 1);
  }
  
  h2.show::after {
    animation: hide 1.7s forwards cubic-bezier(0.23, 1, 0.32, 1);
  }
  
  
  button {
